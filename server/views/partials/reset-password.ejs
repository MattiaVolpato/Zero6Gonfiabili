<section class="login-wrapper">
  <div class="login-card reveal">
    <h1 class="login-title">Nuova Password</h1>
    <form id="form-reset" class="login-form">
      <label for="rp-pass">Nuova Password</label>
      <input
        type="password"
        id="rp-pass"
        name="password"
        class="login-input"
        required
        minlength="6"
      />
      <button type="submit" class="login-btn">Aggiorna Password</button>
      <p id="rp-msg" class="mt-3 text-center"></p>
    </form>
  </div>
</section>
