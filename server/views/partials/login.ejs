<section class="login-wrapper">
  <div class="login-card reveal">
    <h1 class="login-title">Accedi al tuo account</h1>

    <form id="form-login" class="login-form" autocomplete="on">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="login-input"
        placeholder="nome@esempio.com"
        autocomplete="username"
        required
      />

      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="login-input"
        placeholder="••••••••"
        autocomplete="current-password"
        required
      />

      <button type="submit" class="login-btn">Accedi</button>

      <p class="login-extra">
        Non hai ancora un account?
        <a href="/register" data-link>Registrati qui</a>
      </p>
      <p class="login-extra">
        <a href="/forgot-password" data-link>Password dimenticata?</a>
      </p>
      <label class="login-remember">
        <input type="checkbox" name="rememberMe" /> Ricordami per 30 giorni
      </label>
    </form>
  </div>
</section>
