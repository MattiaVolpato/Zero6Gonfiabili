<section class="py-3">
  <h1 class="h3">Verifica buono sconto</h1>

  <form id="form-coupon" class="stack" autocomplete="off">
    <label for="coupon-code">Codice</label>
    <div class="flex-row gap-2 items-center">
      <input
        id="coupon-code"
        type="text"
        name="code"
        placeholder="FESTA10"
        required
      />
      <button type="submit" class="btn">Conferma</button>
    </div>
  </form>

  <div id="coupon-result" class="mt-3"></div>
</section>
