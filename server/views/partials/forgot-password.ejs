<section class="login-wrapper">
  <div class="login-card reveal">
    <h1 class="login-title">Recupera Password</h1>
    <form id="form-forgot" class="login-form">
      <label for="fp-email">Inserisci la tua email</label>
      <input
        type="email"
        id="fp-email"
        name="email"
        class="login-input"
        required
        placeholder="nome@esempio.com"
      />
      <button type="submit" class="login-btn">Invia Link</button>
      <p id="fp-msg" class="mt-3 text-center"></p>
      <p class="login-extra"><a href="/login" data-link>Torna al login</a></p>
    </form>
  </div>
</section>
